<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View"/>

    <variable
      name="viewModel"
      type="com.aurora.player.viewmodels.PlayerCharacterVM"/>
  </data>


  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/fragment_player_character_equipment_shields_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:context="com.aurora.player.fragments.PlayerCharacterEquipmentPlaceholderFragment"
      tools:listitem="@layout/fragment_player_character_equipment_armour">

    </androidx.recyclerview.widget.RecyclerView>
  </ScrollView>
</layout>