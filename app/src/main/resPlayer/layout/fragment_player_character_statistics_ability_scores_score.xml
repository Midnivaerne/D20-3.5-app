<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/fragment_player_character_statistics_ability_scores_score"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/fragment_player_character_statistics_ability_scores_score_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:background="@color/grey_light"/>

  <TextView
    android:id="@+id/fragment_player_character_statistics_ability_scores_score_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:background="@color/grey_light"/>

  <TextView
    android:id="@+id/fragment_player_character_statistics_ability_scores_score_modifier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:background="@color/grey_light"/>

  <TextView
    android:id="@+id/fragment_player_character_statistics_ability_scores_score_temporary_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:background="@color/grey_light"/>

  <TextView
    android:id="@+id/fragment_player_character_statistics_ability_scores_score_temporary_modifier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:background="@color/grey_light"/>

</LinearLayout>