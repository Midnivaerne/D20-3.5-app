<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/fragment_player_character_equipment_worn"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_eyes"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_head"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_neck"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_shoulders"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_ring_right"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_ring_left"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_hands"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_wrists"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_torso"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_body"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
      android:id="@+id/fragment_player_character_equipment_worn_waist"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>

    <include
      android:id="@+id/fragment_player_character_equipment_worn_feet"
      layout="@layout/fragment_text_value_with_description_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_small"
      android:layout_marginEnd="@dimen/spacing_small"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>


</LinearLayout>